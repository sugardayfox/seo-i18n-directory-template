---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../utils/i18n';
import { languages } from '../../i18n/ui';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({
    params: { lang }
  }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('error.title', 'Error')}>
  <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 text-center">
      <div>
        <h1 class="mt-6 text-4xl font-extrabold text-gray-900">
          {t('error.title', 'Oops! Something went wrong')}
        </h1>
        <p class="mt-4 text-xl text-gray-600">
          {t('error.description', 'We encountered an unexpected error. Please try again later.')}
        </p>
      </div>
      <div>
        <a 
          href={`/${lang}`} 
          class="inline-block bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-dark transition-colors"
        >
          {t('error.homeButton', 'Return to Home')}
        </a>
      </div>
    </div>
  </div>
</Layout>