---
import Layout from '../../layouts/Layout.astro';
import DirectoryItemCard from '../../components/DirectoryItemCard.astro';
import { getLangFromUrl, useTranslations } from '../../utils/i18n';
import { languages } from '../../i18n/ui';
import { supabase } from '../../utils/supabase';
import ListingModal from '../../components/ListingModal.astro';
import type { DirectoryItem, BlogPost } from '../../utils/supabase';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { data: directoryItems = [], error: directoryError } = await supabase
  .from('directory_items')
  .select('*')
  .eq('lang', lang)
  .order('created_at', { ascending: false })
  .limit(6);

const { data: posts = [], error: postsError } = await supabase
// Fetch data from Supabase with proper error handling
  .from('blog_posts')
  .select('*')
  .eq('lang', lang)
  .order('published_date', { ascending: false })
  .limit(3);

if (directoryError) console.error('Error fetching directory items:', directoryError);
if (postsError) console.error('Error fetching posts:', postsError);

const faqs = [
  {
    question: t('faq.q1'),
    answer: t('faq.a1')
  },
  {
    question: t('faq.q2'),
    answer: t('faq.a2')
  },
  {
    question: t('faq.q3'),
    answer: t('faq.a3')
  }
];
---

<Layout title={t('hero.title')}>
  <!-- Hero Section -->
  <section class="bg-primary text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold">
        {t('hero.title')}
      </h1>
      <p class="mt-4 text-xl text-gray-300">
        {t('hero.subtitle')}
      </p>
      <a
        href={`/${lang}/directory`}
        class="mt-8 inline-block bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        {t('hero.cta')}
      </a>
    </div>
  </section>

  <!-- Directory Preview Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold">{t('directory.title')}</h2>
        <a href={`/${lang}/directory`} class="text-primary font-semibold hover:text-secondary">
          {t('directory.viewAll')} â†’
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {directoryItems.map((item) => (
          <DirectoryItemCard
            title={item.title}
            description={item.description}
            tags={item.tags || []}
            id={item.id}
            lang={lang}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Submit Listing Section -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">{t('submit.title')}</h2>
      <p class="text-xl text-gray-300 mb-8">{t('submit.subtitle')}</p>
      <button
        type="button"
        data-open-modal
        class="inline-block bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        {t('submit.button')}
      </button>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">{t('faq.title')}</h2>
      <div class="max-w-3xl mx-auto">
        {faqs.map((faq) => (
          <details class="mb-4 bg-white rounded-lg shadow-md">
            <summary class="cursor-pointer p-6 text-lg font-semibold">
              {faq.question}
            </summary>
            <p class="px-6 pb-6 text-gray-600">
              {faq.answer}
            </p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">{t('blog.title')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">
                <a href={`/${lang}/blog/${post.id}`} class="hover:text-primary">
                  {post.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4">{post.description}</p>
              <time class="text-sm text-gray-500">
                {new Date(post.published_date).toLocaleDateString(lang)}
              </time>
            </div>
          </article>
        ))}
      </div>
</Layout>
    </div>
  </section>

  <ListingModal />