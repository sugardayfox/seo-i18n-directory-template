---
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../../utils/i18n';
import { languages } from '../../../i18n/ui';
import { supabase } from '../../../utils/supabase';
import type { DirectoryItem } from '../../../utils/supabase';

export async function getStaticPaths() {
  const { data: items = [] } = await supabase
    .from('directory_items')
    .select('id, lang');

  return Object.keys(languages).flatMap(lang => 
    (items || []).map(item => ({
      params: { lang, id: item.id }
    }))
  );
}

const { id } = Astro.params;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { data: item, error } = await supabase
  .from('directory_items')
  .select('*')
  .eq('id', id)
  .single();

if (error || !item) {
  return Astro.redirect(`/${lang}/error`);
}
---

<Layout title={item.title}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{item.title}</h1>
      <div class="flex flex-wrap gap-2 mb-4">
        {item.tags.map(tag => (
          <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>
      <p class="text-xl text-gray-600">{item.description}</p>
    </header>
    <div class="prose max-w-none" set:html={item.content} />
  </article>
</Layout>