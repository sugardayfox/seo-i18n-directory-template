---
interface Props {
  title: string;
  description: string;
  tags: string[];
  slug: string;
  lang: string;
}

const { title, description, tags, slug, lang } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">
      <a href={`/${lang}/directory/${slug}`} class="hover:text-primary">
        {title}
      </a>
    </h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-sm rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>
</article>